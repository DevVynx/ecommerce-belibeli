{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file=.env src/server.ts",
    "build": "tsup",
    "lint": "eslint .",
    "check-types": "tsc --noEmit",
    "prisma:migrate": "dotenv -e .env -- prisma migrate dev",
