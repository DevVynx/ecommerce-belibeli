    "db:reset": "prisma migrate reset --skip-seed && pnpm db:seed"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "7.3.0",
    "bcrypt": "^6.0.0",
